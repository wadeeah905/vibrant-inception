@inherits Crm.Library.Modularization.CrmViewUserControl
@using Crm.Library.Globalization.Extensions

<div class="modal-header card-header ch-alt">
	<button type="button" class="close" data-dismiss="modal" aria-label="@(Html.Localize("Close"))">
		<span aria-hidden="true">&times;</span>
	</button>
	<h4 class="modal-title">@(Html.Localize("LoadProfile"))</h4>
</div>
<div class="modal-body card-body card-padding">
	<form>
		<form-element id="SchedulerProfile" params="value: $root.selectedProfileId, caption: 'Profiles', type: 'select2'">
			<select class="form-control" data-bind="select2autocompleter: { data: value, autocompleteOptions: { customFilter: $root.profileFilter.bind($root), table: 'SmsScheduler_Profile', mapDisplayObject: $root.mapForSelect2Display, onSelect: $root.onProfileSelected.bind($root) } }">
			</select>
		</form-element>
		<!-- ko requiredPermission: { name: 'CanSeeOtherUsersProfile', group: 'Scheduler' } -->
		<form-element params="value: $root.showOtherUserProfile, caption: 'ShowOtherUsersProfiles', type: 'checkbox'"></form-element>
		<!-- /ko -->
	</form>
</div>
<div class="modal-footer card-header ch-alt p-15">
	<button type="button" class="btn btn-lg btn-default f-13 waves-effect"  data-dismiss="modal" data-bind="click: cancel, disable: loading">
		@(Html.Localize("Cancel"))
	</button>
	<button type="button" class="btn btn-lg btn-primary f-13 waves-effect" data-bind="click: save, disable: loading">
		@(Html.Localize("Load"))
	</button>
</div>